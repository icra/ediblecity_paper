doi = {10.3389/fmars.2020.00387},
issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {Diplodus sargus,Mediterranean Sea,anti-fouling paint,copper,pollution,white seabream},
month = {jun},
pages = {387},
