doi = {10.1016/j.jclepro.2017.01.130},
file = {:C$\backslash$:/Users/jpueyo/Downloads/1-s2.0-S0959652617301452-main.pdf:pdf},
issn = {09596526},
journal = {Journal of Cleaner Production},
keywords = {Building-Integrated Agriculture (BIA),Controlled Environment Agriculture (CEA),Global Warming Potential (GWP),Parametric simulation,Performance-based design,Resource efficiency},
