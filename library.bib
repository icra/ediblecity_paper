isbn = {0169-2046},
issn = {01692046},
journal = {Landscape and Urban Planning},
keywords = {Ecosystem management,Landscape aesthetics,Landscape quality assessment,Scenic quality},
mendeley-tags = {Scenic quality},
pages = {267--281},
title = {{Whither scenic beauty? Visual landscape quality assessment in the 21st century}},
