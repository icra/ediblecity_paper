file = {:C$\backslash$:/Users/jpueyo/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Grewal et al. - 2011 - An assessment of soil nematode food webs and nutrient pools in community gardens and vacant lots in two post-indu.pdf:pdf},
issn = {10838155},
journal = {Urban Ecosystems},
keywords = {Ecosystem services,Nematode community,Urban ecosystem},
number = {2},
pages = {181--194},
title = {{An assessment of soil nematode food webs and nutrient pools in community gardens and vacant lots in two post-industrial American cities}},
