journal = {Water Resources and Economics},
keywords = {CBTC,Contingent behavior,National outdoor recreation survey,Travel cost,Water quality,travel cost,wetland uses},
mendeley-tags = {CBTC,travel cost,wetland uses},
month = {oct},
publisher = {Elsevier},
title = {{Effects of water quality changes on the recreation benefits of swimming in Finland: Combined travel cost and contingent behavior model}},
url = {http://www.sciencedirect.com/science/article/pii/S2212428416301049?via{\%}3Dihub},
year = {2017}
