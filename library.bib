@book{Herremans2013,
abstract = {Cases in Sustainable Tourism will prepare your students to become “problem solvers” when faced with real-life decisions in the hospitality and tourism industry. The book is equally valuable as a training tool for professional development programs offered by corporations, professional associations, and park personnel.
