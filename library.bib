keywords = {Landscape composition and configuration,Species' function,Sub-Saharan cities,Urban agroecology},
number = {2},
pages = {397--408},
publisher = {Urban Ecosystems},
title = {{Structural landscape changes in urban and peri-urban agricultural systems of two West African cities and their relations to ecosystem services provided by woody plant communities}},
