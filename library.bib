journal = {Conservation Biology},
keywords = {Actions taxonomy,Authority files,Conservation Measures Partnership,Conservation science,Conservation strategies,Direct threats to biodiversity,IUCN Red List,Threats taxonomy},
number = {4},
pages = {897--911},
title = {{A standard lexicon for biodiversity conservation: Unified classifications of threats and actions}},
volume = {22},
year = {2008}
}
@article{LaNotte2017,
