issn = {16108167},
journal = {Urban Forestry and Urban Greening},
keywords = {Dietary recommendations,Food forestry,Food production potential,Food supply capacity,Macronutrients,Nutritional requirements},
month = {oct},
publisher = {Elsevier GmbH},
title = {{Sustainable food production in a temperate climate – a case study analysis of the nutritional yield in a peri-urban food forest}},
