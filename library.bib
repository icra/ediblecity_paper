journal = {Ecological Indicators},
keywords = {scenic quality},
mendeley-tags = {scenic quality},
pages = {222--231},
title = {{Assessment of landscape aesthetics—Validation of a landscape metrics-based assessment by visual estimation of the scenic beauty}},
