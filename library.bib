issn = {1051-0761},
journal = {Ecological Applications},
keywords = {GIS,ecosystem services,homogenization,human impact,inventory,isolated wetlands,prairie pothole connectivity,restoration,wetland distribution,wetland loss,wetlands},
mendeley-tags = {GIS,inventory,wetlands},
