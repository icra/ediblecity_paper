journal = {Science of the Total Environment},
keywords = {Constructed wetlands,Nitrogen,Phosphorus,Standing stock,Wastewater},
number = {1-3},
pages = {48--65},
pmid = {17078997},
title = {{Removal of nutrients in various types of constructed wetlands}},
